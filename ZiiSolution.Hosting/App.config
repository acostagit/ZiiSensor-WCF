<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="ZiiSensor.Service.TemperaturaService" behaviorConfiguration="ServiceConfig">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:63793"/>
          </baseAddresses>
        </host>
        <endpoint 
          address="srv" 
          binding="basicHttpBinding" 
          contract="ZiiSensor.Service.Interface.ITemperaturaService"/>
      <endpoint 
         address="mex"
         binding="mexHttpBinding"
         contract="IMetadataExchange"/>
      </service>
    </services>
  <behaviors>
    <serviceBehaviors>
      <behavior name="ServiceConfig">
        <serviceMetadata httpGetEnabled="true"/>        
      </behavior>
    </serviceBehaviors>
  </behaviors>
  </system.serviceModel>
</configuration>